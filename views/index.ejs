<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    <title>SignUp page</title>
    <style>
      /* Style for the modal */
      .modal {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        z-index: 1;
        box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.3);
        width: 90%;
        max-width: 500px;
      }

      /* Style for the close button */
      .close-modal {
        position: absolute;
        top: 10px;
        right: 10px;
        font-size: 24px;
        font-weight: bold;
        color: #aaa;
        background-color: transparent;
        border: none;
        cursor: pointer;
      }

      /* Style for the alignment container */
      .allignment {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
      }

      /* Style for the Google sign-in button */
      .google-btn {
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: white;
        color: black;
        border: 2px solid black;
        border-radius: 5px;
        padding: 10px;
        cursor: pointer;
        transition: all 0.3s ease-in-out;
        width: 100%;
        max-width: 200px;
        margin-bottom: 10px;
      }

      .google-btn:hover {
        background-color: rgb(36, 208, 208);
        color: white;
      }

      .google-icon-wrapper {
        width: 20%;
        margin-right: 10px;
        text-align: center;
      }

      .google-icon {
        width: 50%;
      }

      /* Style for the Facebook and LinkedIn sign-in buttons */
      .loginBtn--facebook,
      .loginBtn--linkedIn {
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: white;
        color: black;
        border: 2px solid black;
        border-radius: 5px;
        padding: 10px;
        cursor: pointer;
        transition: all 0.3s ease-in-out;
        width: 100%;
        max-width: 200px;
        margin-bottom: 10px;
      }

      .loginBtn--facebook:hover,
      .loginBtn--linkedIn:hover {
        background-color: #2d4373;
        color: aliceblue;
      }

      /* Style for the sign-up form */
      form {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
      }
      a {
        color: black;
        text-decoration: none;
      }

      .form-control {
        margin-bottom: 10px;
        width: 100%;
        max-width: 300px;
      }

      input[type="text"],
      input[type="email"],
      input[type="password"] {
        width: 100%;
        padding: 10px;
        border: 2px solid black;
        border-radius: 5px;
        font-size: 16px;
      }
    </style>
  </head>
  <body>
    <div class="modal">
      <!-- <button class="close-modal">&times;</button> -->
      <div class="allignment">
        <div class="google-btn" class="login">
          <div class="google-icon-wrapper">
            <img
              class="google-icon"
              src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg"
            />
          </div>
          <a href="/auth/google" class="btn-text"><b>Sign in with google</b></a>
        </div>
        <div class="google-btn" class="login">
          <div class="google-icon-wrapper">
            <img
              class="google-icon"
              src="data:image/png;base64,
            "
            />
          </div>
          <a href="/auth/facebook" class="btn-text"
            ><b>Sign in with facebook</b></a
          >
        </div>
        <div class="google-btn" class="login">
          <div class="google-icon-wrapper">
            <img
              class="google-icon"
              src="data:image/png;base64,"
            />
          </div>
          <a href="/auth/linkedIn" class="btn-text"
            ><b>Sign in with LinkedIn</b></a
          >
        </div>
        <!-- <div class="login">
          <button class="loginBtn loginBtn--facebook">
            <a href="/auth/facebook"> Sign in with Facebook </a>
          </button>
        </div>
        <div class="login">
          <button class="loginBtn loginBtn--linkedIn">
            <a href="/auth/linkedIn"> Sign in with linkedIn </a>
          </button>
        </div> -->
      </div>

      <h2 style="text-align: center">Sign Up</h2>

      <form action="/create" method="post">
        <div class="form-control">
          <input
            type="text"
            id="name"
            name="name"
            placeholder="name"
            required
          />
        </div>
        <div class="form-control">
          <input
            type="email"
            id="email"
            name="email"
            placeholder="email"
            required
          />
        </div>
        <div class="form-control">
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Password"
            required
          />
        </div>
        <div class="form-control">
          <input
            type="password"
            id="confirm-password"
            name="confirmPassword"
            placeholder="confirm-password"
            required
          />
        </div>
        <button class="signup" type="submit">Sign Up</button>
      </form>
      <div>
        <h3>
          Already have an account?
          <a class="login" href="/signin">sign In</a>
        </h3>
      </div>
    </div>
    <div class="overlay hidden"></div>
    <script>
      function onSignIn(googleUser) {
        var profile = googleUser.getBasicProfile();
        console.log("ID: " + profile.getId()); // Do not send to your backend! Use an ID token instead.
        console.log("Name: " + profile.getName());
        console.log("Image URL: " + profile.getImageUrl());
        console.log("Email: " + profile.getEmail()); // This is null if the 'email' scope is not present.
      }
    </script>
  </body>
</html>
